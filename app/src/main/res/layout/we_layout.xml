<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rock">

    <TextView
        android:id="@+id/weText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Bu dastur TexnoPOS IT maktabi o'quvchisi Xayrullo Shamuratov tomonidan ishlab chiqildi. Dastur bo'yicha taklif va fikrlar bo'lsa shamuratovxayrullo@gmail.com elektron pochtasiga jo'natishingiz mumkin. Xato va kamchiliklar uchun oldindan uzr."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape"
        android:padding="16dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/telegram"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/telegram"
        app:layout_constraintEnd_toStartOf="@id/instagram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="#0B3B9A"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/twitter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/twitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/instagram"
        app:layout_constraintTop_toBottomOf="@id/weText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="#0B3B9A"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/instagram"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/telegram"
        app:layout_constraintTop_toBottomOf="@id/weText"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toStartOf="@id/twitter"
        android:src="@drawable/instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="#9A0B87"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
